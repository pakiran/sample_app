<%= form_for @comment do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.hidden_field :micropost_id, :value => micropost_id %>
    <%= f.text_area :content, placeholder: "Compose new commnet..." %>
  </div>
  <%= f.submit "Comment", class: "btn btn-mini btn-success" %>
<% end %>